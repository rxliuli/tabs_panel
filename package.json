{
  "name": "tabs_panel",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev:popup": "parcel src/popup.html",
    "dev:options": "parcel src/options.html",
    "dev:chrome": "cross-env ApiEnv=chrome parcel watch src/content.tsx src/options.html src/popup.html src/background.ts --no-hmr --out-dir dist/tabs_panel_chrome",
    "build:chrome": "cross-env ApiEnv=chrome parcel build src/content.tsx src/options.html src/popup.html src/background.ts --out-dir dist/tabs_panel_chrome",
    "pack:chrome": "crx pack dist/tabs_panel_chrome -p key.pem  --zip-output dist/tabs_panel.zip",
    "publish:chrome": "yarn build:chrome && yarn pack:chrome"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@types/chrome": "^0.0.106",
    "@types/classnames": "^2.2.10",
    "@types/firefox-webext-browser": "^70.0.1",
    "@types/mockjs": "^1.0.2",
    "@types/node": "^14.0.1",
    "@types/react": "^16.8.6",
    "@types/react-dom": "^16.9.7",
    "@types/react-router": "^5.1.7",
    "@types/react-router-dom": "^5.1.5",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "cross-env": "^7.0.2",
    "crx": "^5.0.1",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-react-hooks": "^4.0.2",
    "mockjs": "^1.1.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.3.1",
    "postcss-modules": "^2.0.0",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "antd": "^4.2.0",
    "classnames": "^2.2.6",
    "normalize.css": "^8.0.1",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "jsx": true,
      "useJSXTextNode": true
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint",
      "plugin:react-hooks/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "react-hooks"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "off",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  }
}
